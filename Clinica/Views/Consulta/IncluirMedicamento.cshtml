@model Clinica.Models.ConsultaMedicamento

@{
    ViewBag.Title = "IncluirMedicamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Incluir</h2>

@using (Html.BeginForm("IncluirMedicamento", "Consulta", FormMethod.Post, new { id = "insertForm" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Medicamento</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.ConsultaId)

    <div class="form-group">
        @Html.LabelFor(model => model.MedicamentoId, "Medicamento", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MedicamentoId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MedicamentoId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Posologia, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Posologia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Posologia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Incluir" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Cancelar", "Detalhes", new { id = Model.ConsultaId })
</div>
