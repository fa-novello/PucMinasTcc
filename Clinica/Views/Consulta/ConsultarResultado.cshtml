@model IEnumerable<Clinica.Models.ListarExames>

@{
    ViewBag.Title = "Resultados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consultar resultados</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataConsulta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exame.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DataConsulta)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Paciente)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Medico)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Exame.Descricao)
    </td>
    <td>
        @Html.ActionLink("Ver detalhes", "DetalheExame", new { idExameConsulta = item.Id })
    </td>
</tr>
}

</table>
