@model Clinica.Models.ConsultaExame

@{
    ViewBag.Title = "IncluirExame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Exame</h2>

@using (Html.BeginForm("AlterarExame", "Consulta", FormMethod.Post, new { id = "insertForm" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Definir laudo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.ConsultaId)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ExameId)

    <div class="form-group">
        @Html.LabelFor(model => model.ExameId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Exame.Descricao)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Realizado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Realizado)
                @Html.ValidationMessageFor(model => model.Realizado, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Laudo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Laudo, htmlAttributes: new { rows = 8, @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Laudo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DataLiberacaoExame, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DataLiberacaoExame, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DataLiberacaoExame, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Cancelar", "ExamePendente")
</div>
