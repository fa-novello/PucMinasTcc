@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated == true)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Trocar senha", "TrocarSenha", "Acesso", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>

    using (Html.BeginForm("LogOff", "Acesso", FormMethod.Post, new { id = "logoff_form", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="javascript:document.getElementById('logoff_form').submit()">Sair</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Acessar", "Logar", "Acesso", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        @*<li>@Html.ActionLink("Registrar", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
    </ul>
}
